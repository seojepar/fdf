{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang build active file",
            "command": "/usr/bin/clang",
            "args": [
                "-g",
                "*.c",
                "-I",
                "./minilibx_macos",
                "-L",
                "./minilibx_macos",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lmlx",
                "-framework",
                "OpenGL",
                "-framework",
                "AppKit",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "execute",
            "command": "${fileDirname}/${fileBasenameNoExtension} < input  > ouput",
            "group": "test",
            "presentation": {
                "clear": true
            }
        },
    ],
    "version": "2.0.0"
}